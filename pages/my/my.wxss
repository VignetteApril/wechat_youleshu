page {
  width: 100vw;
  height: 100vh;
	background-color: #f5f5f5;
}
/* 顶部用户信息 */
.top-view {
  position: relative;
}

.top-view .top-background-image {
  width: 750rpx;
  height: 412rpx;
}

.user-info-content {
  position: absolute;
  top: 120rpx;
  left: 35rpx;

  display: flex;
  flex-direction: column;
}

.user-info-content .user-info-section {
  display: flex;
  flex-direction: row;
}

.user-info-content .user-info-section .user-head {
  height: 183rpx;
  width: 183rpx;
}

.user-info-content .user-info-section .name-phone {
  display: flex;
  flex-direction: column;
  margin-top: 45rpx;
  margin-left: 25rpx;
}

.user-info-content .user-info-section .name-phone .name {
  font-family: SourceHanSansCN-Regular;
	font-size: 34rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #ffffff;
}

.user-info-content .user-info-section .name-phone .phone {
  font-family: SourceHanSansCN-Regular;
	font-size: 22rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #ffffff;
}

.user-info-content .menu-section {
  width: 658rpx;
	height: 170rpx;
	background-color: #ffffff;
	border-radius: 10rpx;
  margin-top: 20rpx;
  margin-left: 13rpx;

  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.user-info-content .menu-section .center-area {
  width: 486rpx;
	height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.user-info-content .menu-section .center-area .content {
  width: 100rpx;
  height: 110rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.user-info-content .menu-section .center-area .content image {
  width: 48rpx;
	height: auto;
}

.user-info-content .menu-section .center-area .content .courses{
  width: 61rpx;
	height: 52rpx;
}

.user-info-content .menu-section .center-area .content .setting{
  width: 58rpx;
	height: 56rpx;
}

.user-info-content .menu-section .center-area .content {
  font-family: SourceHanSansCN-Normal;
	font-size: 25rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #1f1f1f;
}

.user-info-section .user-head {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

/* 下面部分 */

.bottom-section {
  margin-top: 100rpx;
}

.bottom-section .icon-slot {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.bottom-section .icon-slot .left-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

/* 弹出层 */
.popup {
  background-color: transparent !important;
  top: 650rpx !important;

  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}
.input-book-code-pop {
  background-color: transparent; 
}

.input-book-code-pop .tower {
  width: 750rpx;
  height: 693rpx;
  background-color: transparent; 
}

.input-area {
  position: absolute;
  bottom: 120rpx;
  width: 500rpx;

  display: flex;
  flex-direction: column;
  align-items: center;
}

.input-area .input-label {
  font-family: SourceHanSansCN-Medium;
	font-size: 26rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #494949;
}
.input-area .input-bar {
	width: 280rpx;
	height: 52rpx;
	background-color: #f5f5f5;
	border-radius: 12rpx;
}

.input-area .hint {
  font-family: SourceHanSansCN-Normal;
	font-size: 20rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 1rpx;
	color: #b7b7b7;
}

.popup .close-pop {
  width: 60rpx;
  height: 60rpx;
  margin-top: 20rpx;
}

.input-area .submit-book-code {
  width: 440rpx;
	height: 64rpx;
  background-color: #0db4ff;
	box-shadow: 5rpx 5rpx 49rpx 0rpx 
		rgba(0, 90, 255, 0.07);
  border-radius: 32rpx;
  margin-top: 45rpx;
  
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.submit-book-code .submit-text {
  font-family: SourceHanSansCN-Regular;
	font-size: 29rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 3rpx;
	color: #feffff;
}

.bottom-area {
  background-color: white;
  position: fixed;
  bottom: 0rpx;
  width: 100vw;
  height: 100rpx;

  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.bottom-area text {
  font-family: SourceHanSansCN-Regular;
	font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 2rpx;
	color: #0db5ff;
}

.login-button {
  width: 210rpx !important;
	height: 23rpx;
	border-radius: 20rpx;
  border: solid 1rpx #ffffff;
  background: transparent;
  margin-top: 10rpx;

  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.login-button text {
  font-family: SourceHanSansCN-Regular;
	font-size: 18rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #ffffff;
}